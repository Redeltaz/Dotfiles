{
    "languageserver": {
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "terraform": {
            "command": "terraform-ls",
            "args": ["serve"],
            "filetypes": ["terraform", "tf"],
            "initializationOptions": {}
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        }
    }
}
